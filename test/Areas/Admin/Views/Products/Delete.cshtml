@model test.Models.Product
@{
    ViewBag.Title = "Delete";
    
}

<h2>Delete</h2>

<form action="/admin/products/delete/@Model.ProductID" method="post">
    <input type="hidden" name="IDSanPham" value="@Model.ProductID" />
    <table class="table">
        <tr>
            <th>Tên sản phẩm</th>
            <th>@Model.ProductName</th>
        </tr>
        <tr>
            <th>Giá Bán</th>
            <th>@Model.Price</th>
        </tr>
    </table>
    <button type="submit" class="btn btn-danger">Xóa sản phẩm</button>
    <a href="/admin/products" class="btn btn-danger">Trở về</a>
</form>

