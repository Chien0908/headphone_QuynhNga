@model test.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}







<head>
    <link rel="stylesheet" type="text/css" href="~/Content/search_ProductName.css">
</head>
<div class="content">
    <nav id="nav-hori">
        <div class="container">
            <div class="row">
                <div id="main-menu" class="dropdown col">
                    <a href="~/product/index"><button class="dropbtn " type="button">DANH MỤC SẢN PHẨM</button></a>

                </div>
                <div id="search" class="col-md-5 ">
                    <div class="container-fluid">
                        <form class="d-flex" role="search" action="/product/search_ProductName/">
                            <input class="form-control me-2" type="search" placeholder="Search" id="search" name="search">
                            <button class="btn btn-outline-success" type="submit"><i class="fab fa-sistrix"></i></button>
                        </form>
                    </div>
                </div>
                <div id="hotline-top" class="col">
                    <p><i class="fas fa-phone"></i>  Gọi ngay 0969009843 | 098772268</p>
                </div>
            </div>
        </div>
    </nav>
</div>

<div class="container">
   @using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row w-25 mx-auto">
        <div class="col-md-12">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Tên tài khoản", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Username)
        </div>

        <div class="col-md-12">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
    </div>
    <div class="row w-25 mx-auto">
        <div class="col-md-12">
            @Html.ValidationSummary()
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4" style="width:auto"><button type="submit" class="btn btn-success">Đăng Nhập</button></div>
    </div>
}
</div>


