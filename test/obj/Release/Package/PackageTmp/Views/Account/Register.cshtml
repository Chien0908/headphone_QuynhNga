@model test.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}




<head>
    <link rel="stylesheet" type="text/css" href="~/Content/search_ProductName.css">
</head>
<div class="content">
    <nav id="nav-hori">
        <div class="container">
            <div class="row">
                <div id="main-menu" class="dropdown col">
                    <a href="~/product/index"><button class="dropbtn " type="button">DANH MỤC SẢN PHẨM</button></a>

                </div>
                <div id="search" class="col-md-5 ">
                    <div class="container-fluid">
                        <form class="d-flex" role="search" action="/product/search_ProductName/">
                            <input class="form-control me-2" type="search" placeholder="Search" id="search" name="search">
                            <button class="btn btn-outline-success" type="submit"><i class="fab fa-sistrix"></i></button>
                        </form>
                    </div>
                </div>
                <div id="hotline-top" class="col">
                    <p><i class="fas fa-phone"></i>  Gọi ngay 0969009843 | 098772268</p>
                </div>
            </div>
        </div>
    </nav>
</div>

<div class="container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Tên tài khoản", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Username)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.ConfirmPassword)
            @Html.PasswordFor(temp => temp.ConfirmPassword, new { placeholder = "Nhập lại mật khẩu", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Mobile)
            @Html.TextBoxFor(temp => temp.Mobile, new { placeholder = "Số điện thoại", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Mobile)
        </div>

    </div>
    <button type="submit" class="btn btn-success">Đăng ký</button>
}
</div>




